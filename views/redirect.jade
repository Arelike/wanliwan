doctype 5
html
  head
    meta(charset='utf8')
    title 跳转中
    link(rel='stylesheet',href='/stylesheets/bootstrap/bootstrap.css')
    link(rel='stylesheet',href='/stylesheets/wlw.css')
    link(rel='stylesheet',href='/stylesheets/wanliwan.css')
    script(src='/javascripts/jquery.js')
    link(rel='stylesheet',href='/stylesheets/reg.css')
    script(src='/javascripts/check.js')
    link(rel="stylesheet",href="/stylesheets/redirect.css")
    if typeof error!='undefined' && error != null
      script
        $(function () {
          $('#message').css({
            border: '2px solid red',
          }).doShake();
        });
    else
      if typeof refresh == 'undefined'
        - refresh = 3
    if typeof refresh != 'undefined' && refresh > 0
      meta(http-equiv='refresh',content=refresh+'; '+link)
      script
        $(function() {
          setInterval(function() {
            var secs = parseInt($('#secs').text());
            $('#secs').text(--secs);
          },1000);
        });

  body
    .content
      div.sign
        if typeof error!='undefined' && error != null
          i.icon-warning-sign.icon-4x
        else
          i.icon-spinner.icon-spin.icon-4x
      p#message= message
      div.center
        a(href='#{link}',class=typeof error!='undefined'&& error!=null?'btn-danger':'btn-success').btn.btn-large
          span 点击此处快速跳转
          if typeof refresh != 'undefined' && refresh > 0
            span#secs= refresh
            span 秒后继续
    .clearfix

