-var position = false
-var tempost  = {author:{}} 
each post in posts
  if tempost.author.name != post.author.name
    - position = !position
  - tempost = post
  if  position
    .tip_right
      .follow_avatar_right
        img(src="/images/2-1.png")
      .message_right
        .messagebar
          span.name #{post.author.name}
          span.time #{post.date.getHours()}: #{post.date.getMinutes()}&nbsp;&nbsp;
          span.date #{post.date.getMonth()+1} - #{post.date.getDate()}
          
          if post.author.name==user.name
            .tool
              a(href="#")
                span.icon-wrench.fix
              a(href="#")
                span.icon-remove.close
        .show_content
          p !{post.content}
        .appraize
          span.mood
            i.ti_mood #
            | 心情
            <!--xi huan-->
          a(href="#")
            span.num 1 
            span.wlw-heart.shape
              <!--xi huan-->
              <!--讨论 taolun-->
          a(href="#")
            span.num 2
            span.icon-heart.shape
            <!--讨论 taolun-->
            <!--转发 zhuan fa-->
          a(href="#")
            span.num 3
            span.icon-share-alt.shape
            <!--转发 zhuan fa-->
  else
    .tip_left
      .follow_avatar_left
        img(src="/images/1.png")
      .message_left
        .messagebar
          span.name #{post.author.name}
          span.time #{post.date.getHours()}: #{post.date.getMinutes()}&nbsp;&nbsp;
          span.date #{post.date.getMonth()+1} - #{post.date.getDate()}
          if post.author.name==user.name
            .tool
              a(href="#")
                span.icon-wrench.fix
              a(href="#")
                span.icon-remove.close        
        .show_content
          p !{post.content}
        .appraize
          span.mood
            i.ti_mood #
            | 心情
            <!--xi huan-->
          a(href="#")
            span.num 1
            span.wlw-heart.shape
            <!--xi huan-->
            <!--讨论 taolun-->
          a(href="#")
            span.num 2 
            span.icon-heart.shape
