  script
    $(function () {
      $('[data-toggle]').toggleElement({
        duration: 10000,
        toggle: function (elem) {
          var $elem = $(elem);
          $(elem).slideToggle();
          $(".top_show").fadeToggle();
        }
      }).each(function (index,elem) {
        var $elem = $(elem);
        var $toggle = $($elem.data('toggle'));
        $toggle.trigger('mouseleave');
      });
    });

